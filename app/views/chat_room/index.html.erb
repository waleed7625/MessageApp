<h4 class="ui center aligned medium icon header">
  <i class="circular blue coffee icon"></i>
  Say Something
</h4>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <% @messages.each do |message| %>
          <div class="event">
            <div class="content">
              <div class="summary">
                <a><%=message.user.username %> :</a> <%= message.body %> 
          </div>
            </div>  
              </div>  
          <% end %>
          <div class="event">
            <div class="content">
              <div class="summary">
                <a>Elliot Fu</a> added <a>Jenny Hess</a> as a friend
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Enter a message...">
            <i class="bordered inverted blue edit icon"></i>
          </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical pointing menu">
          <a class="item active"> Home </a>
          <a class="item"> Messages </a>
          <a class="item"> Friends </a>
        </div>
      </div>
    </div>
  </div>
</div>
